h1#forms.category-head Forms
section.row
    article.col-sm-4
        .row
            .col-xs-12.col-sm-10
                h4.no-top-margin-xs Text Input
    article.col-sm-8
        .code-source-wrapper
            .module.code-example-source
                form(role='form')
                    // Text input
                    .form-group
                        label.form-label.col-sm-12(for='defaultInputText')
                            | Normal
                        .col-sm-12
                            input.form-input.form-control(type='text', placeholder="I'm a text input")
                    .form-group
                        label.form-label.col-sm-12(for='defaultInputText')
                            | Focus
                        .col-sm-12
                            input.form-input.form-control.focus(type='text', placeholder="I'm a text input")
                    .form-group
                        label.form-label.col-sm-12(for='defaultInputText')
                            | Disabled
                        .col-sm-12
                            input.form-input.form-control(type='text', placeholder="I'm a text input", disabled)
                    .form-group.has-danger
                        label.form-label.col-sm-12(for='defaultInputText')
                            | Error
                        .col-sm-12
                            input.form-input.form-control(type='text', placeholder="I'm a text input")
                            p.form-text Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
