                            a.nav-link(href='#') Hotels
                            a.nav-link(href='#') Cars
                    .col-xs-6.text-xs-right
                        ul.nav.nav-inline.nav-dark
                            li.nav-item
                                label.custom-control.custom-radio
                                    input.custom-control-input(name='radio', type='radio')
                                    span.custom-control-indicator
                                    span.custom-control-description Normal
                            li.nav-item
                                label.custom-control.custom-radio
                                    input.custom-control-input(name='radio', type='radio')
                                    span.custom-control-indicator
