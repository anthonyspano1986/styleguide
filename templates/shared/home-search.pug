.parbase.tab-home-page.panel-container.multi-search-tabs
    .multi-search-form__overlay
    .multi-search-form(data-q-tabs="true")
        ul.nav.nav-tabs.nav-tabs-dark.search-tabs(role='tablist')
            li.nav-item(role='presentation')
                a.nav-link.active.text-xs-center(data-toggle='tab', href='#search-tab-1', role='tab')
                    i.icon-add-circle
                    span Book a trip
            li.nav-item(role='presentation')
                a.nav-link.text-xs-center(data-toggle='tab', href='#search-tab-2', role='tab')
                    i.icon-add-circle
                    span Manage booking
            li.nav-item(role='presentation')
                a.nav-link.text-xs-center(data-toggle='tab', href='#search-tab-3', role='tab')
                    i.icon-add-circle
                    span Check-in
            li.nav-item(role='presentation')
                a.nav-link.text-xs-center(data-toggle='tab', href='#search-tab-4', role='tab')
                    i.icon-add-circle
                    span Flight status
        // Tab panes
        .tab-content.container__parsys
            #search-tab-1.tab-pane.active(role='tabpanel')
                .row.m-b-1
                    .col-xs-6
                        nav.nav.nav-inline.nav-dark
