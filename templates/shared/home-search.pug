                            li.nav-item
                                a.link.link-internal(href='#') Normal
                                    i.icon-arrow-right
                            li.nav-item
                                a.link.link-internal(href='#') Normal
                                    i.icon-arrow-right
                .row.m-t-1
                    .col-xs-5
                        .form-group.m-b-0
                            label.inline-label From
                            input.form-control(type='text', placeholder='From', value='Sydney, Australia')
                    .col-xs-5
                        .form-group.m-b-0
                            label.inline-label To
